@{
    ViewData["Title"] = "Register";
}

<h2>Înregistrare</h2>

<form method="post">
    <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Parola</label>
        <input type="password" name="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Înregistrare</button>
</form>
<a asp-controller="Account" asp-action="Login">Ai deja cont? Autentifică-te aici</a>
