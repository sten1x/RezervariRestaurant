@model ReviewModel

@{
    ViewData["Title"] = "Adaugă o recenzie";
}

<h2 class="mb-4">Adaugă o recenzie</h2>

<div class="card p-4 bg-dark text-white">
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="Rating" class="font-weight-bold">Nota (1-5):</label>
            <select asp-for="Rating" class="form-control w-25">
                <option value="1">⭐ 1</option>
                <option value="2">⭐⭐ 2</option>
                <option value="3">⭐⭐⭐ 3</option>
                <option value="4">⭐⭐⭐⭐ 4</option>
                <option value="5">⭐⭐⭐⭐⭐ 5</option>
            </select>
        </div>

        <div class="form-group mt-3">
            <label for="Text" class="font-weight-bold">Recenzie:</label>
            <textarea asp-for="Text" class="form-control" rows="4" placeholder="Scrie recenzia ta aici..."></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Trimite</button>
    </form>
</div>
